@model EFpfa.Models.Produit

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Supprimer un Produit</h2>

<p>Êtes-vous sûr de vouloir supprimer le produit <strong>@Model.Nom</strong> ? Cette action est irréversible.</p>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <p><strong>Image associée :</strong></p>
    <img src="@Model.ImagePath" alt="Produit Image" width="100" height="100" />
}

<form asp-controller="Product" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer
    </button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
