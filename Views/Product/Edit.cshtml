@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model ecommerceAPP.ViewModels.ProductVM

<h2 class="mb-4">Modifier un Produit</h2>

<form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control border border-dark rounded" required>
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control border border-dark rounded" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" type="number" class="form-control border border-dark rounded" step="0.01" required>
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="StockQuantites"></label>
        <input asp-for="StockQuantites" type="number" class="form-control border border-dark rounded" required>
        <span asp-validation-for="StockQuantites" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="CategorieId"></label>
        <select asp-for="CategorieId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Nom"))" class="form-control border border-dark rounded">
            <option value="">Sélectionner une catégorie</option>
        </select>
        <span asp-validation-for="CategorieId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Image Actuelle</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Produit Image" width="100" height="100" />
        }
        else
        {
            <span>Pas d'image</span>
        }
    </div>

    <div class="form-group mt-2">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control border border-dark rounded">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Mettre à jour
        </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
</form>
